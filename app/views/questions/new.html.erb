<%= render "shared/header" %>
  <div class='question-post-contents'>
    <h2 class="question-post-text">
      質問を記入してください
    </h2>
    <%= form_with model: @question, data: {turbo: false} do |f| %>
    <div class="question-title-contents">
      <div class="weight-bold-text">
        タイトル
      </div>
      <div class="question-title-form">
        <%= f.text_field :question_title %>
      </div>
    </div>
    <div class="question-detail-contents">
      <div class="weight-bold-text">
        質問内容
      </div>
      <div class="question-detail-form">
        <%= f.text_area :question_detail %>
      </div>
    </div>
    <div class="qual-select-contents">
      <div class="weight-bold-text">
        どの資格に関する質問かを選択
      </div>
      <div class="qual-select-form">
        <%= f.collection_select(:qual_id, Qual.all, :id, :name, { prompt: " どの資格に関する質問か選択してください " }, { class: "select-box", id: "question-qual" }) %>
      </div>
    </div>
    <div class="question-btn-contents">
      <%= f.submit "投稿する", class:"question-btn" %>
    </div>
    <% end %>
  </div>
<%= render "shared/footer" %>