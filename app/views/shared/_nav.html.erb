<script>
function toggleDropdown(genre) {
  var dropdowns = document.querySelectorAll('.dropdown-list');
  
  for (var i = 0; i < dropdowns.length; i++) {
    if (dropdowns[i].id === genre) {
      if (dropdowns[i].style.display === 'none') {
        dropdowns[i].style.display = 'block';
      } else {
        dropdowns[i].style.display = 'none';
      }
    } else {
      dropdowns[i].style.display = 'none';
    }
  }
}

function showText(text) {
  var selectedItemText = document.getElementById('selectedItemText');
  selectedItemText.textContent = text;
}
</script>